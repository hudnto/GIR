@helper ModalConfirmacao(string modalId)
{
    <div id="@string.Format("modal{0}",modalId)" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"><span id="@string.Format("modalTitulo{0}",modalId)"></span></h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-success">
                        <span id="@string.Format("modalMensagem{0}",modalId)"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="@string.Format("modalConfirmar{0}",modalId)" type="button" class="btn btn-primary" data-dismiss="modal"></button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}

@helper Modal(string id, string mensagem)
{
    <div id="@id" data-backdrop="static" data-keyboard="false" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="border-bottom: none;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">
                    <p>@mensagem</p>
                </div>
                <div class="modal-footer">
                    <div class="pull-right">
                        <button type="button" class="btn btn-sm btn-default" onclick="window.location = urlRoot + '/Home'">Não</button>
                        <button type="button" id="sim" name="sim" class="btn btn-sm btn-primary" data-dismiss="modal">Sim</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

